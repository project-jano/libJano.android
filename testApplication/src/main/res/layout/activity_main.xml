<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.main.MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="32dp">

        <Button
            android:id="@+id/generate_certificate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/generate_certificate" />

        <Button
            android:id="@+id/sign_certificate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sign_certificate" />

        <Button
            android:id="@+id/local_echo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/local_echo" />

        <Button
            android:id="@+id/decode_payload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/decode_payload" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="@+id/linearLayout"
        tools:layout_editor_absoluteX="32dp"
        tools:visibility="gone" />
</androidx.constraintlayout.widget.ConstraintLayout>